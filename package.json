{
  "name": "vscode-memory-manager",
  "displayName": "Memory Manager",
  "version": "0.0.2-feature5.1+14",
  "description": "Manage and inject contextual knowledge into GitHub Copilot Chat using hierarchical tags",
  "publisher": "memory-manager",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "memory.manager",
        "name": "memory",
        "description": "Manage and inject contextual knowledge using hierarchical tags",
        "isSticky": false,
        "commands": [
          {
            "name": "memory-tag",
            "description": "Query memories by tag pattern"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "memory-manager.showAllTags",
        "title": "Memory Manager: Show All Tags",
        "category": "Memory Manager"
      },
      {
        "command": "memory-manager.showMemoryContents",
        "title": "Memory Manager: Show Memory Contents",
        "category": "Memory Manager"
      },
      {
        "command": "memory-manager.rebuildMemoryIndex",
        "title": "Memory Manager: Rebuild Memory Index",
        "category": "Memory Manager"
      }
    ]
  },
  "scripts": {
    "lint": "eslint src --ext .ts",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "version": "node scripts/show-version.js",
    "update-version": "node scripts/update-version.js",
    "prebuild": "npm run update-version",
    "build": "npm run lint && npm run compile",
    "prepackage": "npm run update-version",
    "package": "vsce package",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alkampfergit/vscode-memory-manager.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alkampfergit/vscode-memory-manager/issues"
  },
  "homepage": "https://github.com/alkampfergit/vscode-memory-manager#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.6.0",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
